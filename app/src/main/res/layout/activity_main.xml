<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/ivInfo"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="111dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMovieSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <Button
        android:id="@+id/btnMovieSearch"
        android:layout_width="396dp"
        android:layout_height="89dp"
        android:layout_marginBottom="430dp"
        android:backgroundTint="@color/orange"
        android:text="Movie Search"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivInfo" />

    <Button
        android:id="@+id/btnActorSearch"
        android:layout_width="407dp"
        android:layout_height="90dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/orange"
        android:text="Actor Search"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMovieSearch" />

    <Button
        android:id="@+id/btnAdvancedSearch"
        android:layout_width="400dp"
        android:layout_height="95dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="160dp"
        android:backgroundTint="@color/orange"
        android:text="Advanced Search"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="174dp"
        android:layout_height="162dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="321dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAdvancedSearch"
        app:layout_constraintEnd_toStartOf="@+id/ivInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_2" />

</androidx.constraintlayout.widget.ConstraintLayout>
